  if [[ "${MAS_SCREEN_MODE_NEW}" ]] ; then
    mas_call_from define_std_directories stddirs
    echo "${MAS_SCREEN_DELAY_START:-3} seconds to screen mode processing" >&2
    ${MAS_SLEEP_CMD:=/bin/sleep} ${MAS_SCREEN_DELAY_START:-3}
    mas_source_scriptsn_opt_std _mastar_settings_per_scrmode MAS_CONF_DIR_SCREEN_MODE
  fi
  return 0 
